package cmd

import (
	"fmt"

	"github.com/spf13/cobra"
{% if ci_platform == 'gitlab' -%}
	"{{ gitlab_url }}/{{ project_name }}/src/{{ tool_name }}/version"
{%- else -%}
	"github.com/{{ github_registry | replace('ghcr.io/', '') }}/src/{{ tool_name }}/version"
{%- endif %}
)

var versionCmd = &cobra.Command{
	Use:   "version",
	Short: "Print version information",
	Long:  `Print the version, commit hash, and build date of {{ tool_name }}.`,
	Run: func(cmd *cobra.Command, args []string) {
		fmt.Printf("{{ tool_name }} %s\n", version.Version)
		fmt.Printf("  Commit:     %s\n", version.Commit)
		fmt.Printf("  Built:      %s\n", version.BuildDate)
	},
}

func init() {
	rootCmd.AddCommand(versionCmd)
}
